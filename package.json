{
  "name": "@avinlab/repeat",
  "version": "1.0.0",
  "description": "Make repeat actions easily",
  "author": "Avin Grape <carcinogen75@gmail.com> (https://github.com/avin/)",
  "contributors": [
    "Avin Grape <carcinogen75@gmail.com> (https://github.com/avin/)"
  ],
  "license": "MIT",
  "homepage": "https://github.com/avin/repeat",
  "repository": {
    "type": "git",
    "url": "https://github.com/avin/repeat"
  },
  "bugs": {
    "url": "https://github.com/avin/repeat/issues"
  },
  "engines": {
    "node": ">8.0.0"
  },
  "keywords": [
    "repeat",
    "repeat",
    "setTimeout",
    "setInterval"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "src/*.js",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && mkdir dist && yarn build:flow && yarn build:source",
    "build:flow": "cpr flow-template dist/index.cjs.js.flow && cpr flow-template dist/index.esm.js.flow",
    "build:source": "rollup -c",
    "flow": "flow check --max-warnings=0 src && flow check website",
    "linc": "lint-staged",
    "lint": "eslint '**/*.js'",
    "precommit": "lint-staged",
    "prepare": "yarn run build",
    "prettier": "prettier --write \"**/*.{js,json,css}\"",
    "start": "rollup -c -w",
    "test": "jest"
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,json,css,md}": [
        "prettier --write",
        "git add"
      ],
      "**/*.js": "eslint --max-warnings 0"
    },
    "concurrent": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "add": "^2.0.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "bluebird": "^3.5.3",
    "cpr": "^3.0.1",
    "cross-env": "^5.1.4",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "flow-bin": "^0.89.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.12.1",
    "regenerator-runtime": "^0.13.1",
    "rimraf": "^2.6.2",
    "rollup": "^1.0.2",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "yarn": "^1.12.3"
  }
}
